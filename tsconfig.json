{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "types": ["jest", "puppeteer"],
    "paths": {
      "@web-steps/*": ["packages/*/src"],
      "shared/*": ["packages/shared/src/utils/*"]
    },
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "keyofStringsOnly": true
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src",
    "packages/*/@types",
    "packages/*/__tests__",
    "__tests__",
    "*.vue",
    "submodule/test-source"
  ]
}
