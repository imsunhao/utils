{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "types": ["jest", "puppeteer"],
    "paths": {
      "@web-steps/*": ["packages/*/src"],
      "shared/*": ["packages/shared/src/utils/*"]
    },
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "keyofStringsOnly": true
  },
  "include": ["packages/global.d.ts", "packages/*/src", "packages/*/@types", "packages/*/__tests__", "*.vue"]
}
