{
  "private": true,
  "version": "0.0.0-alpha.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "node scripts/bootstrap.js",
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "debug": "node scripts/debug.js",
    "create-api-doc": "api-documenter markdown --input-folder ./temp --output-folder ./temp/markdown",
    "size-runtime": "node scripts/build.js runtime-dom size-check -p -f global",
    "size-compiler": "node scripts/build.js compiler-dom -p -f global",
    "size": "yarn size-runtime && yarn size-compiler",
    "lint": "prettier --write --parser typescript \"packages/**/*.ts?(x)\"",
    "test": "node scripts/build.js -p && jest",
    "release": "node scripts/release.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.7.10",
    "@microsoft/api-extractor": "^7.7.7",
    "@rollup/plugin-json": "^4.0.1",
    "@rollup/plugin-replace": "^2.3.0",
    "@types/jest": "^24.0.21",
    "brotli": "^1.3.2",
    "chalk": "^2.4.2",
    "conventional-changelog-cli": "^2.0.31",
    "enquirer": "^2.3.4",
    "execa": "^4.0.0",
    "jest": "^24.9.0",
    "minimist": "^1.2.0",
    "prettier": "~1.14.0",
    "rollup": "^1.29.1",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.7.0"
  }
}
